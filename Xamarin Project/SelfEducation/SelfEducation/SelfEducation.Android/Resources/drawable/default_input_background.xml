<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <!-- Image display in background in select state -->
  <item android:state_pressed="true">
    <shape>
      <stroke
          android:width="4dp"
          android:color="@color/orange"/>

      <corners
          android:radius="5dp" />

      <padding
          android:left="10dp"
          android:right="10dp"
          android:top="15dp"
          android:bottom="15dp"/>

      <solid android:color="@color/white"/>
    </shape>
  </item>

  <!-- Image display in background in select state -->
  <item android:state_focused="true">
    <!-- focused -->
    <shape>
      <stroke
          android:width="4dp"
          android:color="@color/orange"/>

      <corners
          android:radius="5dp" />

      <padding
        android:left="10dp"
          android:right="10dp"
          android:top="15dp"
          android:bottom="15dp"/>

      <solid android:color="@color/white"/>
    </shape>
  </item>

  <!-- Default state -->
  <item>
    <shape>
      <stroke
        android:width="4dp"
        android:color="@color/white"/>

      <corners
          android:radius="5dp" />

      <padding
        android:left="10dp"
          android:right="10dp"
          android:top="15dp"
          android:bottom="15dp"/>

      <solid android:color="@android:color/white"/>
    </shape>
  </item>
</selector>