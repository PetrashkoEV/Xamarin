<?xml version="1.0" encoding="utf-8" ?> 
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Image display in background in select state -->
  <item android:state_pressed="true">
    <shape>
      <stroke
          android:width="2dp"
          android:color="@color/orange"/>

      <corners
          android:radius="60dp" />

      <padding
          android:left="20dp"
          android:right="20dp"
          android:top="10dp"
          android:bottom="10dp"/>

      <solid android:color="@color/orange"/>
    </shape>
  </item>

    <!-- Image display in background in select state -->
  <item android:state_focused="true">
    <!-- focused -->
    <shape>
      <stroke
          android:width="2dp"
          android:color="@color/orange"/>

      <corners
          android:radius="60dp" />

      <padding
          android:left="20dp"
          android:right="20dp"
          android:top="10dp"
          android:bottom="10dp"/>

      <solid android:color="@color/orange"/>
    </shape>
  </item>

    <!-- Default state -->
  <item>
    <shape>
      <stroke
        android:width="2dp"
        android:color="@color/white"/>

      <corners
          android:radius="60dp" />

      <padding
          android:left="20dp"
          android:right="20dp"
          android:top="10dp"
          android:bottom="10dp"/>

      <solid android:color="@color/my_blue"/>
    </shape>
  </item>
</selector>