<?xml version="1.0" encoding="utf-8" ?>

<resources xmlns:android="http://schemas.android.com/apk/res/android">
  <style name="Theme.Splash" parent="android:Theme">
    <item name="android:windowBackground">@color/white</item>
    <item name="android:windowNoTitle">true</item>
  </style>
  <style name="MyCustomTheme" parent="@android:style/android:Theme">
    <!-- Customizations go here -->
    <item name="android:buttonStyle">@style/CustomButton</item>
    <item name="android:windowBackground">@drawable/gradient_backgroung_app</item>
    <item name="android:colorBackgroundCacheHint">#00000000</item>
  </style>
  <style name="ThemeInTheActionScreen" parent="@android:style/Theme.Holo.Light.DarkActionBar">
    <item name="android:actionBarStyle">@style/MyActionBar</item>
  </style>
  <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
    <item name="android:displayOptions"></item>
    <item name="android:background">#E2E2E2</item>
    <!-- refactor collor evgeny petrashko -->
  </style>
</resources>